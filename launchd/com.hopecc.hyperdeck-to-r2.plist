<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.hopecc.hyperdeck-to-r2</string>

  <key>ProgramArguments</key>
  <array>
    <string>/usr/local/bin/hyperdeck_to_r2.sh</string>
  </array>

  <key>StartInterval</key>
  <integer>600</integer>

  <key>RunAtLoad</key>
  <true/>

  <key>StandardOutPath</key>
  <string>/var/log/hyperdeck-to-r2/hyperdeck_to_r2.stdout.log</string>
  <key>StandardErrorPath</key>
  <string>/var/log/hyperdeck-to-r2/hyperdeck_to_r2.stderr.log</string>
</dict>
</plist>